{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask 디버거",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development"  // 개발 모드에서 디버깅 가능
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "console": "integratedTerminal"
        }
    ]
}
